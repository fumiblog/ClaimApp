<div class="container-fluid">
  <div class="row">
    <div class="customer_user_make">
      <h3>得意先訂正</h3>
      <%= form_with model: @customer_user, url: admins_customer_user_path(@customer_user), local: true do |f| %>
        <p>会社名：<%= f.text_field :company, :size => "25" %>　支社店：<%= f.text_field :department, :size => "15" %>　社長名：<%= f.text_field :name, :size => "10" %></p>
        <p>
          〒　　：<%= f.text_field :postal_code, :size => "10" %>　住　所：<%= f.text_field :address, :size => "40" %>　TEL　：<%= f.text_field :telephone, :size => "12" %>　<%= f.submit "更新", class: "btn btn-primary btn-sm" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
