<div class="container">
  <div class="row">
    <div class="genre-make">
      <h4>ジャンル作成</h4>
      <%= form_with model: @genre, url: admins_genres_path(@genre), local: true do |f| %>
        ジャンル名：<%= f.text_field :name %>
      <%= f.submit "作成", class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>
    <div class="genre-list">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "訂正", edit_admins_genre_path(genre), class:"btn btn-warning btn-sm" %></td>
              <td><%= link_to "削除", admins_genre_path(genre), method: :delite, class:"btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
